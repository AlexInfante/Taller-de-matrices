#include <stdio.h>
int main(){

int matriz[2][2];//declarar matriz 2x2
    matriz [0][0]=1;
    matriz [0][1]=2;
    matriz [1][0]=3;
    matriz [1][1]=4;

    
        printf("Los 4 elementos de las esquinas son: \n");
        printf("Superior izquierda: %d\n", matriz[0][0]);
        printf("Superior derecha: %d\n", matriz[0][2 - 1]);
        printf("Inferior izquierda: %d\n", matriz[2 - 1][0]);
        printf("Inferior derecha: %d\n", matriz[2 - 1][2 - 1]);
return 0;
}
